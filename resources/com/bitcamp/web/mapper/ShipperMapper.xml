<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<resultMap id="shipperMap" type="com.bitcamp.web.domain.ShipperDTO">
  <id property="shipperId" column="SHIPPER_ID" />
  <result property="shipperName" column="SHIPPER_NAME" />
  <result property="phone" column="PHONE" /> 
 </resultMap>
<mapper namespace="com.bitcamp.web.mapper.ShipperMapper">
  <insert
  id="insertShipper"
  parameterType="com.bitcamp.web.domain.ShipperDTO">
  insert into Shippers (SHIPPER_ID,SHIPPER_NAME,PHONE)
  values (#{shipperId},#{shipperName},#{phone})
  </insert>
  <select id="selectShippers" resultMap="com.bitcamp.web.domain.ShipperDTO">
    select * from Shippers
  </select>
    <select id="selectShippersByOption"
    resultMap="com.bitcamp.web.domain.ShipperDTO"
    parameterType="com.bitcamp.web.domain.ShipperDTO">
    
    select * from Shippers where Shipper_NAME = #{shipperName}
  </select>
    <select id="selectShipperById" 
    resultMap="com.bitcamp.web.domain.ShipperDTO"
    parameterType="string">
    select * from Shippers where Shipper_ID = #{shipperId}
  </select>
<update
  id="updateShipper"
  parameterType="com.bitcamp.web.domain.ShipperDTO">
   update Shippers set
    SHIPPER_NAME = #{shipperName},
    PHONE = #{phone}   

  where Shipper_ID = #{shipperId}
  </update>
<delete
  id="deleteShipper"
  parameterType="com.bitcamp.web.domain.ShipperDTO">
  delete from Shippers where Shipper_ID = #{shipperId}
  </delete>
</mapper>